<mvc:View controllerName="sap.ui.demo.wt.controller.EmploymentList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Table id="EmploymentList" class="sapUiResponsiveMargin" width="auto" items="{ path : 'employment>/Employments'}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>employmentListTitle}"/>
				<ToolbarSpacer/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column hAlign="Begin" minScreenWidth="Small" demandPopin="true" width="20em" visible="{= !${device>/system/phone}}">
				<Text text="{i18n>columnCompany}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnDate}"/>
			</Column>
			<Column hAlign="End">
				<Text text="{i18n>columnPosition}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onPress">
				<cells>
					<ObjectIdentifier title="{employment>company}" visible="{= !${device>/system/phone}}"/>
					<ObjectNumber number="{employment>date}" emphasized="false"/>
					<ObjectIdentifier title="{employment>position}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>