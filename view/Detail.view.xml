<mvc:View controllerName="sap.ui.demo.wt.controller.Detail" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>detailPageTitle}" showNavButton="true" navButtonPress="onNavBack">
		<ObjectHeader title="{education>Course}">
			<attributes>
				<ObjectAttribute title="{education>Course_date}"/>
			</attributes>
		</ObjectHeader>
		<ObjectListItem intro="{i18n>titleLanguages}:" title="{education>Languages}"></ObjectListItem>
		<ObjectListItem intro="{i18n>finalYearProject}:" title="{education>Final_Year_Project}"></ObjectListItem>
		<Table id="FYPDetails" class="sapUiResponsiveMargin" width="auto">
			<headerToolbar>
				<Toolbar>
					<Title text="{i18n>fypDetails}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column></Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier text="{education>FYP_Details}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<Table id="FYPBullets" class="sapUiResponsiveMargin" width="auto" items="{ path : 'education>FYP_Bullets'}">
			<columns>
				<Column ></Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier text="{education>Bullet}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>