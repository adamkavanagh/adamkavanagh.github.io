<mvc:View controllerName="sap.ui.demo.wt.controller.Detail1" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Page title="{i18n>detailPageTitle1}" showNavButton="true" navButtonPress="onNavBack">
        <VBox>
            <Text text="{employment>company}" class="sapUiResponsiveMargin" />
            <Text text="{employment>position}" class="cvLargeText sapUiResponsiveMargin" />
            <Text text="{employment>description}" class="sapUiResponsiveMargin" />
        </VBox>

        <Table id="ResponsibilityList" class="sapUiResponsiveMargin" width="auto" items="{ path : 'employment>keyResponsibilities'}">
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>responsibilityTitle}" />
                    <ToolbarSpacer />
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column />
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier text="{employment>keyRes}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
